// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Bookmark {
  uuid      String          @id @default(cuid())
  title     String
  url       String
  tag       TagOnBookmark[]
  ogImage   String?
  createdOn DateTime        @default(now())
  updatedOn DateTime        @default(now())

}

model Tag {
  uuid       String          @id @default(cuid())
  name       String
  background String
  border     String
  color      String
  bookmarks  TagOnBookmark[]
  createdOn  DateTime        @default(now())
  updatedOn  DateTime        @default(now())
}

model TagOnBookmark {
  bookmark   Bookmark @relation(fields: [bookmarkId], references: [uuid])
  bookmarkId String
  tag        Tag      @relation(fields: [tagId], references: [uuid])
  tagId      String

  @@id([bookmarkId, tagId])
}
